</div>

<div class="col m1">
   <%= text_field_tag :label, params[:label], type: 'search', placeholder: 'Label' -%>
</div>

<div class="col m1">
   <%= text_field_tag :account_id, params[:account_id], type: 'search', placeholder: 'Account Id' -%>
</div>

