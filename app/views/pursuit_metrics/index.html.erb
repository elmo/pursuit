<p id="notice"><%= notice %></p>

<h1>Pursuit Metrics</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Account</th>
      <th>Custom</th>
      <th>Earnings</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pursuit_metrics.each do |pursuit_metric| %>
      <tr>
        <td><%= pursuit_metric.date %></td>
        <td><%= pursuit_metric.account_id %></td>
        <td><%= pursuit_metric.custom %></td>
        <td><%= pursuit_metric.earnings %></td>
        <td><%= link_to 'Show', pursuit_metric %></td>
        <td><%= link_to 'Edit', edit_pursuit_metric_path(pursuit_metric) %></td>
        <td><%= link_to 'Destroy', pursuit_metric, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

